{
	"compilerOptions": {
		"declaration": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"strict": false,
		"resolveJsonModule": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"target": "ESNext",
		"lib": [
			"esnext",
			"DOM"
		],
		"inlineSourceMap": true,
		"outDir": "lib"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"lib",
		"es"
	]
}
